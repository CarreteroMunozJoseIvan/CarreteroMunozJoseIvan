import os
import datetime

base_dir = r"C:\ruta\de\tu\carpeta"

today = datetime.date.today()

for folder in os.listdir(base_dir):
    folder_path = os.path.join(base_dir, folder)

    if os.path.isdir(folder_path):
        creation_time = datetime.date.fromtimestamp(os.path.getctime(folder_path))

        # Si la creación es hoy → elimínala
        if creation_time == today:
            print("Eliminando:", folder_path)
            os.rmdir(folder_path)     # Solo funciona si la carpeta está vacía
