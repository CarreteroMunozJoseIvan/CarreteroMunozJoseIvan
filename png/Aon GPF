import os

# Carpeta base (Final_Slips)
base_dir = r"C:\Users\TU_USUARIO\OneDrive\Documents\Aon GPF Automation\Final_Slips"

# ---- 1) Imprimir TODOS los PDFs de todas las subcarpetas ----
print("PDFs encontrados:\n")
for root, dirs, files in os.walk(base_dir):
    for file in files:
        if file.lower().endswith(".pdf"):
            full_path = os.path.join(root, file)
            print(full_path)

# ---- 2) Imprimir TODOS los Excels de todas las subcarpetas ----
ext_excel = (".xlsx", ".xlsm", ".xls", ".xlsb")
print("\nExcels encontrados:\n")
for root, dirs, files in os.walk(base_dir):
    for file in files:
        if file.lower().endswith(ext_excel):
            full_path = os.path.join(root, file)
            print(full_path)

